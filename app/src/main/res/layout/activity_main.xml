<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/soultana2" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marg"
        android:textSize="@dimen/textSize"
        android:text="@string/Soultana_restaurant"
        android:textStyle="bold"
        android:textColor="@color/dark"
        android:layout_below="@id/image_id"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margLeft"
        android:textSize="@dimen/discSize"
        android:text="@string/disc"
        android:layout_below="@id/text1"/>
    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marg"
        android:layout_below="@id/text2"
        android:layout_marginLeft="@dimen/marg"
        android:layout_marginTop="@dimen/marg"
        android:src="@drawable/ic_location_on_black_24dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/location"
        android:text="@string/address"
        android:layout_marginTop="@dimen/marg"
        android:textColor="@color/dark"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/comment"
        android:layout_marginLeft="@dimen/marg"
        android:layout_marginTop="@dimen/marg"
        android:layout_below="@id/text3"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="@dimen/iconsize"
        android:layout_height="@dimen/iconsize"
        android:layout_below="@id/comment"
        android:layout_marginTop="@dimen/margLeft"
        android:layout_marginLeft="@dimen/icon"
        android:src="@drawable/ic_call_black_24dp" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="@dimen/iconsize"
        android:layout_height="@dimen/iconsize"
        android:layout_below="@id/comment"
        android:layout_marginTop="@dimen/margLeft"
        android:layout_marginLeft="@dimen/icon"
        android:layout_toRightOf="@id/call"
        android:src="@drawable/ic_send_black_24dp" />

</RelativeLayout>